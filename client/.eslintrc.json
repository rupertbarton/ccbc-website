{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "settings": {
    "react": {
      "version": "16.8.5"
    }
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "off"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": "error",
    "react/jsx-uses-vars": "error",
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 0,
        "maxBOF": 0
      }
    ],
    "key-spacing": "error",
    "comma-spacing": "error",
    "array-bracket-spacing": [
      "warn",
      "never"
    ],
    "space-in-parens": "warn",
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "jsx-quotes": [
      "error",
      "prefer-double"
    ],
    "react/jsx-sort-props": [
      "warn",
      {
        "noSortAlphabetically": true,
        "shorthandFirst": true,
        "callbacksLast": true
      }
    ],
    "no-trailing-spaces": "error",
    "react/self-closing-comp": [
      "error",
      {
        "component": true,
        "html": true
      }
    ],
    "react/jsx-pascal-case": "error",
    "react/jsx-boolean-value": ["error", "never"],
    "react/jsx-max-props-per-line": ["error", { "maximum": 1, "when": "always" }]
  }
}